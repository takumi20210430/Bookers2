<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
<!-- form_with部分 -->
      <%= form_with model:@user, local: true do |f| %>
      <div cass="form">
       <div class="form-group">
        <label for="user name">Name</label>
        <%= f.text_field :name %>
       </div>
       <div class="form-group">
       <%= f.attachment_field :profile_image %>
       </div>
  
       <div class="form-group">
        <label for="user introduction">Introduction</label>
        <%= f.text_area :body %>
       </div>
       <div class="form-group">
        <br><%= f.submit 'update User' %></br>
       </div>
     </div>
   </div>
  </div>
</div>
 <% end %>