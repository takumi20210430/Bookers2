<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
　      <%= @user.errors.count %>errors prohibited this obj from being saved:
　      <ul>
　       <% @user.errors.full_messages.each do |message| %>
　        <li><%= message %></li>
　       <% end %>
　      </ul>
　    <% end %>
      <%= form_with model:@user, local: true do |f| %>
      <div cass="form">
       <div class="form-group">
        <label for="user name">Name</label>
        <%= f.text_field :name %>
       </div>
       <div class="form-group">
       <%= f.attachment_field :profile_image %>
       </div>
  
       <div class="form-group">
        <label for="user introduction">Introduction</label>
        <%= f.text_area :introduction %>
       </div>
       <div class="form-group">
        <br><%= f.submit 'Update User' %></br>
       </div>
     </div>
   </div>
  </div>
</div>
 <% end %>